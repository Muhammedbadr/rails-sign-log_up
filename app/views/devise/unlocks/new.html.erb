<div class="min-h-screen bg-gray-100 flex items-center justify-center px-4">
  <!-- Form Card -->
  <div class="w-full max-w-lg bg-white rounded-2xl shadow-xl p-10">

    <!-- Header -->
    <h2 class="text-3xl md:text-4xl font-extrabold text-center text-blue-600 mb-4">
      Resend Unlock Instructions
    </h2>
    <p class="text-center text-gray-500 mb-8">
      Enter your email to receive unlock instructions.
    </p>

    <!-- Form -->
    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div class="mb-6">
        <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email",
              class: "w-full px-5 py-3 rounded-xl bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-400 transition placeholder-gray-400 text-gray-700" %>
      </div>

      <!-- Submit Button -->
      <div class="mb-6">
        <%= f.submit "Resend Unlock Instructions",
              class: "w-full py-3 rounded-xl bg-blue-600 text-white font-semibold hover:bg-blue-700 transition-colors duration-200 shadow-md" %>
      </div>
    <% end %>

