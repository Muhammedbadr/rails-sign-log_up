<div class="min-h-screen bg-gray-50 flex flex-col items-center justify-center p-6">
  <!-- Header -->
  <h2 class="text-3xl md:text-4xl font-extrabold text-blue-600 mb-6 text-center">
    Change Your Password
  </h2>

  <!-- Form Container -->
  <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <!-- New Password Field -->
      <div class="mb-4">
        <%= f.label :password, "New password", class: "block text-gray-700 font-medium mb-2" %>
        <% if @minimum_password_length %>
          <em class="text-gray-500 text-sm mb-2 block">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
              class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-500 transition" %>
      </div>

      <!-- Password Confirmation Field -->
      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirm new password", class: "block text-gray-700 font-medium mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-500 transition" %>
      </div>

      <!-- Submit Button -->
      <div class="mt-6">
        <%= f.submit "Change My Password",
              class: "w-full px-4 py-3 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition-colors duration-200" %>
      </div>
    <% end %>

    <!-- Devise Links -->
    <div class="mt-4 text-center text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
